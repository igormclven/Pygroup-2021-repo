#FUNCIONES
def suma(a,b): #Qué va a necesitar para ejecutar
  return a+b #la funcion retorna algo y acaba con esto "return"
print(suma(10,14))

def factorial(a):
  for i in range(a,0,-1):
    a=a*i
  return(a)
print(factorial(5))

def mayor(a,b):
  if a>=b:
    return a
  else:
    return b
print(mayor(10,5))
print(mayor(1,5))

def permutacion(n,r):
  return factorial(n)/factorial(n-r)

def combinacion(n,r):
  return factorial(n)/(factorial(r)*factorial(n-r))

print(combinacion(10,5))
print(permutacion(10,5))

#PROCEDIMIENTOS
def tablaMultiplicar(n):
  for i in range(11):
    print(n,"*",i,"=",n*i)
tablaMultiplicar(5)
#todo lo que yo vaya a mandar a pantalla es con procedimientos
